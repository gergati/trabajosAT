generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

model User {
  id            String      @id @default(uuid())
  name          String
  email         String      @unique
  emailVerified DateTime?
  password      String
  role          Role        @default(user)
  image         String?
  worksCreated  Work[]      @relation("CreatedWorks") // Trabajos creados por el usuario
  savedWorks    SavedWork[] // Trabajos guardados por el usuario
}

model Work {
  id               String    @id @default(uuid())
  createdAt        DateTime? @default(now())
  updatedAt        DateTime? @updatedAt
  name             String
  name2            String
  email            String
  phone            String
  profesional      String
  ciudad           String
  domicilioLaboral String
  lugarTrabajo     String
  diagnostico      String
  obraSocial       String
  type             String
  terms            Boolean
  turno            String
  age              Int

  // Relación con User (creador del trabajo)
  user   User   @relation("CreatedWorks", fields: [userId], references: [id])
  userId String

  // Relación con SavedWork (usuarios que han guardado el trabajo)
  savedBy SavedWork[]
}

model SavedWork {
  userId String
  workId String
  user   User   @relation(fields: [userId], references: [id])
  work   Work   @relation(fields: [workId], references: [id])

  @@id([userId, workId]) // Clave primaria compuesta
}
